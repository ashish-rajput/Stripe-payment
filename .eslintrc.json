{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "camelcase": "error",
        "indent": "error",
        "comma-spacing": "error",
        "no-var": "error",
        "no-unsafe-finally": "off",
        "no-prototype-builtins": "off"
    }
}
